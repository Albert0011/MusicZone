<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ForgetPassword"
    android:background="@color/White"
    android:padding="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back_arrow"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_selection"
            android:textColor="@color/Black"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:fontFamily="@font/montserratextrabold"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/provide_detail"
            android:textColor="@color/Grey"
            android:textSize="18sp"
            android:fontFamily="@font/helvetica"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginTop="50dp"
            android:background="@color/White"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/mobile_custom_icon" />

            <TextView
                android:id="@+id/textViewMakeSelect2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/mobile_icon"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/via_sms"
                android:textColor="@color/Grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewMakeSelect3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewMakeSelect2"
                android:layout_toRightOf="@id/mobile_icon"
                android:fontFamily="@font/roboto_bold"
                android:text="+6281216131100"
                android:textColor="@color/Black"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/White"
            android:padding="10dp">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/mail_custom_icon"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/textViewMakeSelect4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/via_email"
                android:textColor="@color/Grey"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_toRightOf ="@id/email_icon"
                android:layout_marginTop="25dp"/>
            <TextView
                android:id="@+id/textViewMakeSelect5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="albertch@gmail.com"
                android:textColor="@color/Black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_toRightOf ="@id/email_icon"
                android:layout_below="@id/textViewMakeSelect4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>