<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:clickable="false"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="vertical"
        android:padding="0dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/featured_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/raissa_poster2"
            app:riv_border_width="0dp"
            app:riv_corner_radius="10dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-120dp"
            android:alpha="0.95"
            android:background="@color/White"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:id="@+id/featured_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Raissa Concert"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/featured_passage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Raissa Concert has always been the best concert for years"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/featured_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:text="21/11/22"
                android:textSize="9sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>