<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.DashboardFragment.TicketDashboardFragment"
    android:orientation="vertical"
    android:background="@drawable/ticket_bg_blue">

    <TextView
        android:layout_marginBottom="50dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Tickets"
        android:fontFamily="@font/montserrat_extrabold"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:textColor="@color/White"/>

<!--    <ImageView-->
<!--        android:layout_gravity="center"-->
<!--        android:background="@drawable/ticket2"-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="600dp"/>-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:id="@+id/ticket_recycler"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/featured_desc" />

        <Button
            android:id="@+id/finishConcert"
            android:layout_marginTop="-100dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Finish Concert"
            android:background="@drawable/rounded_corners_black"
            android:textColor="@color/White"
            android:fontFamily="@font/montserrat_extrabold"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>