<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.glitchstacks.musiczone">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE"
        tools:node="remove" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Common.SwipeActivity"/>
        <activity android:name=".Chat.ChatActivity"/>
        <activity android:name=".Matches.MatchesActivity"/>
        <activity android:name=".Common.SettingsActivity"/>
        <activity android:name=".Common.ChoosePeople" />
        <activity android:name=".Common.ForgetPasswordSuccessMessage" />
        <activity android:name=".Common.SetNewPassword" />
        <activity android:name=".Common.MakeSelection" />
        <activity android:name=".Common.ForgetPassword" />
        <activity android:name=".Common.Chatroom" />
        <activity android:name=".Common.MainChat" />
        <activity android:name=".Entries.VerifyOTP" />
        <activity android:name=".Entries.SignUpActivity3rdClass" />
        <activity android:name=".Entries.SignUp2ndClass" />
        <activity android:name=".Entries.SignUp" />
        <activity android:name=".Entries.Login" />
        <activity android:name=".Common.MusicZoneStartUpScreen" />
        <activity android:name=".Entries.LoginActivity" />
        <activity
            android:name=".Common.RetailerDashboard"
            android:noHistory="true"/>
        <activity android:name=".Common.IntroductoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Common.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>